<launch>
  <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch" />
  <node pkg="tf"
        type="static_transform_publisher"
        name="velodyne_tf_broadcaster"
        args="0 0 1 -1 0 0 0 base_link velodyne 100" />
  
  <node name="spot_ros_interface" 
      pkg="spot_ros_interface"
      type="spot_ros_interface.py" 
      args="--username 'USERNAME' --password 'PASSWORD' SPOT_IP" 
      respawn="false" 
      required="true" />

  <node name="websocket" 
      pkg="spot_autonomy"
      type="websocket"
      respawn="true"
      respawn_delay="2" />

  <node name="joystick" 
      pkg="spot_autonomy"
      type="joystick"
      args="--idx 0" 
      respawn="true"
      respawn_delay="2" />

  <node name="enml" 
      pkg="spot_autonomy"
      type="enml"
      args="-c $(find spot_autonomy)/enml/config -m $(find spot_autonomy)/maps" 
      respawn="true"
      respawn_delay="2" />

  <node name="navigation" 
      pkg="spot_autonomy"
      type="navigation"
      args="--map $(find spot_autonomy)/maps/UT_Campus/UT_Campus.navigation.txt" 
      respawn="true"
      respawn_delay="2" />
      
</launch>
